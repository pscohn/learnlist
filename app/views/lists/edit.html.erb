<% provide(:title, 'Edit list') %>
<h1>Edit list</h1>
<%= form_for @list do |f| %>
  <%= f.label :name %>
  <br />
  <%= f.text_field :name %>
  <br />
  <%= f.label :description %>
  <br />
  <%= f.text_area :description %>
  <br />
    <%= f.fields_for :list_items do |items_form| %>
      <%= render "list_item_fields", f: items_form %>
    <% end %>
    <%= link_to_add_fields "Add Item", f, :list_items %>

  <%= f.submit "Save" %>
<% end %>
<%= link_to 'Destroy', list_path(@list),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
<%= link_to 'Done', @list %>
