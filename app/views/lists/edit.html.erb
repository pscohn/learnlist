<% provide(:title, 'Edit list') %>
<h1>Edit list</h1>
<%= form_for @list do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description, rows: 5 %>
  <%= f.label :steps %>
  <%= f.fields_for :list_items do |items_form| %>
    <%= render "list_item_fields", f: items_form %>
  <% end %>
  <%= link_to_add_fields "Add Item", f, :list_items %>
  <%= f.submit "Save" %>
<% end %>
<%= link_to 'Delete', list_path(@list),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
<%= link_to 'Done', @list %>
