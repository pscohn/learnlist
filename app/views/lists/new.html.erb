<% provide(:title, 'New list') %>
<h1>New list</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@list) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.submit "Create list", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
